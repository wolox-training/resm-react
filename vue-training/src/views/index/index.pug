doctype html
html(lang='en')
  head
    title Developer Tools
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='preload' href='./index.js' as='script')
    link(rel='preload' href='./vendor.js' as='script')
    link(rel='preload' href='styles.index.css' as='style')
    link(rel='stylesheet' href='styles.index.css')
    script(src='./vendor.js')
  body
    #app.app-container(v-cloak)
      nav.navbar
        .navbar-header
          img.navbar-logo(
            src='/assets/wolox_logo.svg'
            :alt="$t('navbar.altLogo')"
          )
          h1.navbar-text {{ $t("navbar.title") }}
        .navbar-bottom-container
          span.filter-count
            | {{ $tc('navbar.filter.countMessage', countTechs, { count: countTechs }) }}
          span.language-label {{ $t("navbar.language.languageLabel") }}:
          select.language-select(v-model='locale')
            option(value="en" selected) {{ $t("navbar.language.english") }}
            option(value="es") {{ $t("navbar.language.spanish") }}
          input.filter-input(
            type="text"
            :placeholder="$t('navbar.filter.placeholder')"
            v-model='filter'
          ) 
      transition(
        name="slide-fade"
        mode="out-in"
      )
        .main(v-if='countTechs')
          .tech-list(
            v-for='(techGroup, index) in filteredTechs'
            :key='index'
          )
            h2.title {{ techGroup.title }}
            transition-group.tech-box-list(
              name="slide-fade"
              tag="div"
            )
              tech-box(
                v-for='(tech, index) in techGroup.techsList'
                :key='index'
                :tech='tech'
              )
        .no-data-text(v-else) {{ $t("error.noDataText") }}
      footer.foot
        span.foot-text {{ $t("footer.text") }}
        img.foot-logo(
          src='/assets/wolox_logo_white.svg'
          :alt="$t('footer.altLogo')"
        )
        span.foot-copy {{ $t("footer.copyright") }}
    script(src='./index.js')

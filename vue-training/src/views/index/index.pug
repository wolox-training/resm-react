doctype html
html(lang='en')
  head
    title Developer Tools
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='preload' href='./index.js' as='script')
    link(rel='preload' href='./vendor.js' as='script')
    link(rel='preload' href='styles.index.css' as='style')
    link(rel='stylesheet' href='styles.index.css')
    script(src='./vendor.js')
  body
    #app.app-container(v-cloak)
      nav.navbar
        .navbar-header
          img.navbar-logo(
            src='/assets/wolox_logo.svg'
            alt='logo'
          )
          h1.navbar-text {{ navTitle }}
        .filter-container
          span.filter-count {{ countTechs }} {{ filterCountSuffix }}
          input.filter-input(type="text" :placeholder="filterPlaceholder" v-model="filter")
      .main(v-if="haveData")
        .tech-list(
          v-for="(techGroup, index) in filterTechs"
          :key="index"
        )
          tech-title {{ techGroup.title }}
          .tech-box-list
            tech-box(
              v-for="(tech, index) in techGroup.techsList"
              :key="index"
              :tech="tech"
            )
      message-no-data(v-else) {{ noDataText }}
      footer.foot
        span.foot-text {{ footerText }}
        img.foot-logo(
          src='/assets/wolox_logo_white.svg'
          alt='White app logo'
        )
        span.foot-copy {{ footerCopyright }}
    script(src='./index.js')
